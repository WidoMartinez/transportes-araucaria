{
	"name": "transporte-araucaria-server",
	"version": "1.0.0",
	"description": "Servidor para manejar pagos para el sitio de Transportes Araucaria.",
	"main": "server-db.js",
	"type": "module",
	"scripts": {
		"start": "node server-db.js",
		"start:db": "node server-db.js",
		"migrate": "node migrate.js",
		"migrate:enhanced": "node migrations/001_add_enhanced_fields.js up",
		"migrate:auditoria": "node migrations/002_create_auditoria.js up",
		"migrate:all": "npm run migrate:enhanced && npm run migrate:auditoria",
		"migrate:rollback": "node migrations/002_create_auditoria.js down && node migrations/001_add_enhanced_fields.js down",
		"test:db": "node test-db.js",
		"test:connection": "node test-connection.js",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"axios": "^1.7.2",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"embla-carousel-autoplay": "^8.6.0",
		"express": "^4.19.2",
		"mercadopago": "^2.0.10",
		"mysql2": "^3.15.1",
		"sequelize": "^6.37.7"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
